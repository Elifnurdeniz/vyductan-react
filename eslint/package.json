{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@acme/eslint-config",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "exports": {
    "./base": "./base.js",
    "./nextjs": "./nextjs.js",
    "./react": "./react.js",
    "./tailwind": "./tailwind.js"
  },
  "scripts": {
    "clean": "git clean -xdf .cache .turbo node_modules",
