{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@vyductan/eslint-config",
  "version": "0.2.0",
  "private": true,
  "license": "MIT",
  "files": [
    "./base.js",
    "./nextjs.js",
    "./react.js",
    "./tailwind.js"
  ],
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check \"**/*.{mjs,ts,md,json}\"",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@vyductan/prettier-config",
  "eslintConfig": {
    "extends": [
      "./base.js"
    ],
    "root": true
  },
  "dependencies": {
    "@next/eslint-plugin-next": "^13.5.3",
    "@types/eslint": "^8.44.3",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint-config-airbnb": "19",
    "eslint-config-airbnb-typescript": "17",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-turbo": "^1.10.15",
    "eslint-plugin-filename-rules": "1",
    "eslint-plugin-import": "2",
    "eslint-plugin-jsdoc": "46",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prefer-arrow-functions": "3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "7",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "~0.4.3",
    "eslint-plugin-simple-import-sort": "10",
    "eslint-plugin-sonarjs": "~0.21.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "eslint-plugin-tsdoc": "0.2"
  },
  "devDependencies": {
    "@vyductan/prettier-config": "*",
    "@vyductan/typescript-config": "*",
    "eslint": "^8.50.0",
    "typescript": "^5.2.2"
  }
}
